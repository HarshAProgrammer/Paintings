<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="horizontal"
    android:id="@+id/motionLayCategoriesDetail"
    android:scrollbars="vertical"
    tools:context=".activities.CategoriesDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayoutDetailActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        app:layout_constraintBottom_toTopOf="@id/linLayDetail1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarCategoriesDetailActivity"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/toolbarBackground"
            app:titleTextColor="@color/toolbarText">

        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/imgDetailWatch"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/scrollViewCategoriesDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayoutDetailActivity">

        <com.dmallcott.dismissibleimageview.DismissibleImageView
            android:id="@+id/ivCategoriesDetailImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="4"
            android:contentDescription="@string/rolex_categories_detail_image"
            android:scaleType="centerCrop"
            android:src="@drawable/splashscreen" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linLayDetail1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/description_title_bg"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/scrollViewCategoriesDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgDetailWatch"
        app:layout_constraintTop_toBottomOf="@id/appBarLayoutDetailActivity">

        <TextView
            android:id="@+id/tvCategoriesDetailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rolex_watch_name_categories_detail"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="22sp" />
    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollViewCategoriesDetail"
        android:layout_width="0dp"
        android:layout_height="370dp"
        android:layout_weight="1.5"
        android:baselineAligned="false"
        android:padding="16sp"
        android:scrollbarSize="25sp"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgDetailWatch"
        app:layout_constraintTop_toBottomOf="@id/linLayDetail1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvCategoriesDetailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:text="@string/rolex_detail_categories_description"
                android:textColor="@color/colorDetailDescription"
                android:textSize="19sp">

            </TextView>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>